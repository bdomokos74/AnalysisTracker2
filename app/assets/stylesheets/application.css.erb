#sidePanel {
    width: 255px;
    position: fixed;
    left: -221px;
    top: 30px;
    height: 100%;
    padding: 0;

}

#panelContent {
    float: left;
    width: 200px;
    height: 100%;
    padding-top: 40px;
    padding-left: 20px;
}

#panelHandle {
    position: relative;
    margin-top: 0;
    top: 30%;
    height: 50px;
    width: 35px;
    float: right;
    cursor: pointer;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}

.theme_title {
    font-family: 'Open Sans', sans-serif;
    font-size: 30px;
    font-weight: 300;
}
.theme_subtitle {
    font-family: "Open Sans", arial, sans-serif;
    font-weight: 300;
    font-size: 20px;
}

.theme_smalltitle {
    font-family: "Open Sans", arial, sans-serif;
    font-weight: 300;
    font-size: 16px;
}

.theme_font {
    font-family: "Open Sans", arial, sans-serif;
    font-weight: 300;
}

.theme_form_separator {
    font-family: "Open Sans", arial, sans-serif;
    font-weight: 300;
    font-size: 14px;
    border-bottom: solid 1px;
}

.text_small {
    font-size: 8pt;
}

.text_normal {
    font-size: 11pt;
}

body, input, select, textarea {
    font-family: "Open Sans",arial,sans-serif;
    font-weight: 300;
    font-size: 12px;
}

html, body {
    margin: 0 !important;
    padding: 0 !important;
}

