.theme_transparent {
    color: #424242;
}



.symbol {
    font-family: 'WebSymbolsRegular',Arial,sans-serif !important;
}
@font-face {
    font-family: 'WebSymbolsRegular';
    src: url(<%= asset_path 'websymbols/websymbols-regular-webfont.eot' %>);
    src: url(<%= asset_path 'websymbols/websymbols-regular-webfont.eot' %>) format('embedded-opentype'),
    url(<%= asset_path 'websymbols/websymbols-regular-webfont.woff' %>) format('woff'),
    url(<%= asset_path 'websymbols/websymbols-regular-webfont.ttf' %>) format('truetype'),
    url(<%= asset_path 'websymbols/websymbols-regular-webfont.svg#WebSymbolsRegular' %>) format('svg');
    font-weight: normal;
    font-style: normal;
}



.menuBanner {
    position: fixed;
